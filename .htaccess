DirectoryIndex index.php index.html site-down.php

ErrorDocument 404 /index.php?ta=404

RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteBase /

# next line allow dynamic css stlesheets to look like static css files so to be cached on client browsers # 
RewriteRule ^css/pub_css([^/]*)css$ /css/pub_css.php?piid=$1 [L]
RewriteRule ^home$ index.php?ta=0 [L]
# last line


RewriteRule ^login$ /index.php?ta=900 [L]
