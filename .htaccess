RewriteRule ^admin-issue-([0-9]+)$ /index.php?ta=150&piid=$1 [L]


RewriteRule ^adm-article-([0-9]+)$  /index.php?ta=202&artid=$1 [L]
RewriteRule ^create-article$ /index.php?ta=200&artid=new [L]
RewriteRule ^edit-article-([0-9]+)$  /index.php?ta=201&artid=$1 [L]

RewriteRule ^check-source-([0-9]+)/article-([0-9]+)$ /index.php?ta=5&piid=$1&artid=$2 [L]

RewriteRule ^read-([a-zA-Z0-9_-]+)$ /index.php?ta=1&slug=$1 [L]
